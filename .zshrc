vicd(){
   local dst="$(command vifm --choose-dir - "$@")"
   if [ -z "$dst" ]; then
     echo 'Directory picking canelled/failed'
     return 1
   fi

   cd "$dst"
}

vimcd(){
   local dst="$(command vifm --choose-dir - "$@")"
   if [ -z "$dst" ]; then
     echo 'Directory picking canelled/failed'
     return 1
   fi

   cd "$dst" && vim "$dst"
}

